# LLM Chat App Configuration

# LLM Provider Configuration
# Choose one: openai, anthropic, gemini
LLM_PROVIDER=openai
LLM_API_KEY=your_api_key_here
LLM_API_ENDPOINT=https://api.openai.com/v1
LLM_MODEL=gpt-4

# Application Settings
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Security Settings (IMPORTANT: Generate secure keys for production)
SECRET_KEY=your_secret_key_here_must_be_at_least_32_characters_long
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (Adjust for your domain in production)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
API_REQUEST_TIMEOUT=60

# Database (Optional)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Production Settings Example:
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING
# ALLOWED_ORIGINS=["https://yourdomain.com"]
# SECRET_KEY=generate_a_secure_32_plus_character_secret_key_for_production